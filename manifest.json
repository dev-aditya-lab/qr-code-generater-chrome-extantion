{
    "manifest_version": 3,
    "name": "QR Code Generator",
    "description": "Generate QR codes from URLs with one click!",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "128": "icons/logo.png"
      }
    },
    "permissions": [
      "tabs",
      "activeTab"
    ],
    "icons": {
      "128": "icons/logo.png"
    }
  }
  